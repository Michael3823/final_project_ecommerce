
<div class="container">
      <div class="section">
        <div class="columns">
          <div class="column has-text-centered">
            <% if @products.count == 0 %>
                <h2>There are no products that have: <%= params[:keywords] %> in <%= params[:option] %></h2>
                       
            <% else %>
                <h2> Found <%= pluralize(@products.count, 'Product') %> When searching for: <%= params[:keywords] %></h2>
            <% end %><br>
          </div>
        </div>
        
        <div id="app" class="row columns is-multiline">
        
        <% @products.each do |product|%>
        
          <div v-for="card in cardData" key="card.id" class="column is-4">
            <div class="card large">
              <div class="card-image">
                <figure class="image is-16by9">
                  <%= image_tag(product.image, draggable: "false", id: "drag2", alt: "Edit Entry") %>
                </figure>
              </div>
                
              <div class="card-content">
                <div class="media">
                  <div class="media-left">
                    <figure class="image is-48x48">
                      <%= image_tag('GloveIcon.png', draggable: "false", id: "drag2", alt: "Edit Entry") %>
                    </figure>
                  </div>
                  <div class="media-content">
                    <p class="title is-4 no-padding"><%= link_to product.name, product%></p>
                    <p>
                      <span class="title is-6">
                        <a > <%= product.price %></p> </a> </span> </p>
                   
                  </div>
                </div>
                <div class="content">
                  <%= product.description %></p>
                  <div class="background-icon"><span class="icon-twitter"></span></div>
                </div>
              </div>
              
            </div>
          </div>
          
         
          
            <%end%>
            <%= will_paginate @products %>
            
        </div>
        
      </div>
    </div>






